<div class="mt-5">
  <h2>請修改支出</h2>
  <small>*必填項目</small>
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group col-8">
      <label for="name" class="font-weight-bold">消費名稱&#42;</label>
      <input type="text" id="name" class="form-control" name="name" aria-describedby="name" aria-label="name"
        placeholder="錢都灑到哪裡啦" value="{{record.name}}" required>
    </div>
    <div class="form-group col-8">
      <label for="date" class="font-weight-bold">消費日期&#42;</label>
      <input type="date" id="date" class="form-control" name="date" aria-describedby="date" aria-label="date"
        placeholder="2020/xx/xx" value="{{record.date}}" required>
    </div>
    <div class="form-group col-8">
      <label for="category" class="font-weight-bold">消費類別&#42;</label>
      <select class="custom-select" id="category" name="category" aria-describedby="category" aria-label="category"
        value="{{record.category}}" required>
        <option value="" selected disabled class="text-secondary">挑個灑錢類別吧</option>
        <option value="家居物業" {{#if (eq record.category '家居物業' )}}selected{{/if}}>家居物業</option>
        <option value="交通出行" {{#if (eq record.category '交通出行' )}}selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (eq record.category '休閒娛樂' )}}selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (eq record.category '餐飲食品' )}}selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (eq record.category '其他' )}}selected{{/if}}>其他</option>
      </select>
    </div>
    <div class="form-group col-8">
      <label for="amount" class="font-weight-bold">消費金額&#42;</label>
      <input type="number" id="amount" min="0" class="form-control" name="amount" aria-describedby="amount"
        aria-label="amount" placeholder="88888" value="{{record.amount}}" required>
    </div>
    <div class="d-flex justify-content-center col-12 mt-3">
      <a href="/" class="btn btn-primary" style="color: orange">返回</a>
      <button type="submit" class="btn btn-info ml-3" style="color: orange;" id="submit-button">儲存送出</button>
    </div>
  </form>
</div>